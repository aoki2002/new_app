<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b8d2" >

    <TextView
        android:id="@+id/register_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ユーザ名を入力してください(10文字以内)"
        android:textColor="#2b2b2b"
        android:textSize="15sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_edit1"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:maxLength="10"
        android:inputType="text"
        android:textSize="15sp"
        android:background="@drawable/edit_style"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_txt1" />

    <TextView
        android:id="@+id/register_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="メールアドレスを入力してください"
        android:textColor="#2b2b2b"
        android:textSize="15sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_edit1" />

    <EditText
        android:id="@+id/register_edit2"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:maxLength="10"
        android:inputType="text"
        android:textSize="15sp"
        android:background="@drawable/edit_style"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_txt2" />

    <TextView
        android:id="@+id/register_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ユーザ名を入力してください(10文字以内)"
        android:textColor="#2b2b2b"
        android:textSize="15sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_edit2" />

    <EditText
        android:id="@+id/register_edit3"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:maxLength="10"
        android:inputType="text"
        android:textSize="15sp"
        android:background="@drawable/edit_style"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_txt3" />

    <Button
        android:id="@+id/register_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登録"
        android:textSize="20sp"
        android:textColor="#2b2b2b"
        android:background="@drawable/button_style"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_edit3"/>

</androidx.constraintlayout.widget.ConstraintLayout>